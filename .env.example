# Environment Variables for Backend Integration

# Email Service (using a service like SendGrid, AWS SES, or Resend)
VITE_EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
VITE_EMAIL_FROM_ADDRESS=noreply@docedeleite.jp
VITE_EMAIL_FROM_NAME=Doce de Leite

# PayPay API Configuration
# Get your API keys from: https://developer.paypay.ne.jp/
VITE_PAYPAY_API_KEY=your_paypay_api_key_here
VITE_PAYPAY_API_SECRET=your_paypay_api_secret_here
VITE_PAYPAY_MERCHANT_ID=your_merchant_id_here
VITE_PAYPAY_ENVIRONMENT=sandbox # or 'production'

# Carrier APIs
# Japan Post API
VITE_JAPAN_POST_API_KEY=your_japan_post_api_key_here
VITE_JAPAN_POST_CUSTOMER_CODE=your_customer_code_here

# Yamato Transport API
VITE_YAMATO_API_KEY=your_yamato_api_key_here
VITE_YAMATO_CUSTOMER_CODE=your_customer_code_here

# Sagawa Express API
VITE_SAGAWA_API_KEY=your_sagawa_api_key_here
VITE_SAGAWA_CUSTOMER_CODE=your_customer_code_here

# Backend API URL
VITE_API_URL=http://localhost:3001/api
# or for production: https://api.docedeleite.jp

# WhatsApp Business API
VITE_WHATSAPP_API_KEY=your_whatsapp_api_key_here
VITE_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
VITE_WHATSAPP_BUSINESS_NUMBER=070-1367-1679

# Store Information (for shipping labels)
VITE_STORE_NAME=Paula Shiokawa
VITE_STORE_POSTAL_CODE=518-0225
VITE_STORE_ADDRESS=Mie-ken Iga-shi Kirigaoka 5-292
VITE_STORE_PHONE=070-1367-1679

# Bank Account Details (for bank transfer payments)
VITE_BANK_NAME=Nome do Banco
VITE_BANK_BRANCH=Número da Agência
VITE_BANK_ACCOUNT=Número da Conta
VITE_BANK_ACCOUNT_HOLDER=Paula Shiokawa
